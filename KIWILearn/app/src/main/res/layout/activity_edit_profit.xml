<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfitActivity"
    android:background="?attr/colorWhiteBackground">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/layout_header"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="8%"
        android:background="?attr/colorWhiteBackground">

        <ImageView
            android:id="@+id/imageView_applogo_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="15%"
            app:layout_heightPercent="90%"
            app:layout_marginLeftPercent="1%"
            app:layout_marginRightPercent="1%"
            app:layout_marginTopPercent="5%"/>

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView_applogo_small"
            android:layout_alignBottom="@id/imageView_applogo_small"
            android:textColor="?attr/colorSecondaryContents"
            android:text="TextView"
            android:textSize="26dp"
            app:layout_marginLeftPercent="1%"
            app:layout_marginRightPercent="1%"
            app:layout_marginTopPercent="5%"/>
        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:background="@drawable/backgournd_border"
            android:layout_alignParentBottom="true"
            app:layout_heightPercent="3%"/>

    </android.support.percent.PercentRelativeLayout>
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/layout_body"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="84%"
        android:layout_below="@+id/layout_header"
        android:background="?attr/colorWhiteBackground">

        <ImageView
            android:id="@+id/imageView_user_icon"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/user"
            app:layout_widthPercent="40%"
            app:layout_heightPercent="25%"
            app:layout_marginTopPercent="2%"/>

        <TextView
            android:id="@+id/textView_user_name"
            android:layout_below="@id/imageView_user_icon"
            android:textColor="?attr/colorSecondaryContents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile_name"
            android:autoSizeTextType="uniform"
            app:layout_widthPercent="30%"
            app:layout_marginLeftPercent="10%"
            app:layout_marginTopPercent="7.5%"
            app:layout_heightPercent="4%"/>

        <EditText
            android:background="@drawable/backgournd_border"
            android:id="@+id/editText_user_name"
            android:layout_below="@id/imageView_user_icon"
            android:layout_toRightOf="@id/textView_user_name"
            android:layout_width="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="?attr/colorPrimaryContents"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_widthPercent="45%"
            app:layout_heightPercent="8%"
            app:layout_marginTopPercent="5%"
            app:layout_marginLeftPercent="5%"/>

        <TextView
            android:id="@+id/textView_user_gender"
            android:textColor="?attr/colorSecondaryContents"
            android:layout_below="@id/textView_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:text="@string/edit_profile_gender"
            app:layout_widthPercent="30%"
            app:layout_marginLeftPercent="10%"
            app:layout_marginTopPercent="6.6%"
            app:layout_heightPercent="4%"/>

        <RadioGroup
            android:id="@+id/radioButton_user_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/editText_user_name"
            android:layout_toRightOf="@id/textView_user_gender"
            app:layout_widthPercent="45%"
            app:layout_heightPercent="8%"
            app:layout_marginTopPercent="3%"
            app:layout_marginLeftPercent="5%">

            <RadioButton
                android:id="@+id/radioButton_female"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@drawable/radio_status"
                android:textColor="?attr/colorPrimaryContents"
                android:text="Female"/>

            <RadioButton
                android:id="@+id/radioButton_male"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="?attr/colorPrimaryContents"
                android:button="@drawable/radio_status"
                android:layout_weight="1"
                android:text="Male" />
        </RadioGroup>
        <TextView
            android:id="@+id/textView_user_region"
            android:layout_below="@id/textView_user_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile_region"
            android:autoSizeTextType="uniform"
            app:layout_widthPercent="30%"
            app:layout_marginLeftPercent="10%"
            app:layout_marginTopPercent="6.85%"
            app:layout_heightPercent="4%"/>
        <EditText
            android:background="@drawable/backgournd_border"
            android:id="@+id/editText_user_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButton_user_gender"
            android:layout_toRightOf="@id/textView_user_region"
            android:textColor="?attr/colorPrimaryContents"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_widthPercent="45%"
            app:layout_heightPercent="8%"
            app:layout_marginTopPercent="3%"
            app:layout_marginLeftPercent="5%"/>

        <TextView
            android:id="@+id/textView_user_email"
            android:layout_below="@id/textView_user_region"
            android:textColor="?attr/colorSecondaryContents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile_email"
            android:autoSizeTextType="uniform"
            app:layout_widthPercent="30%"
            app:layout_marginLeftPercent="10%"
            app:layout_marginTopPercent="6.85%"
            app:layout_heightPercent="4%"/>


        <EditText
            android:background="@drawable/backgournd_border"
            android:id="@+id/editText_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_user_region"
            android:layout_toRightOf="@+id/textView_user_email"
            android:ems="10"
            android:textColor="?attr/colorPrimaryContents"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:inputType="textPersonName"
            app:layout_widthPercent="45%"
            app:layout_heightPercent="8%"
            app:layout_marginTopPercent="3%"
            app:layout_marginLeftPercent="5%"/>

        <Button
            android:id="@+id/button_edit_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_user_email"
            app:layout_marginTopPercent="5%"
            android:autoSizeTextType="uniform"
            android:textColor="?attr/colorPrimaryContents"
            android:autoSizeMaxTextSize="16dp"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:background="@drawable/backgournd_border"
            app:layout_widthPercent="25%"
            app:layout_heightPercent="8%"
            android:text="Submit"
            android:onClick="onClickSubmit"/>


    </android.support.percent.PercentRelativeLayout>
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="8%"
        android:layout_below="@+id/layout_body"
        android:background="?attr/colorWhiteBackground">

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:background="@drawable/backgournd_border"
            android:layout_alignParentTop="true"
            app:layout_heightPercent="3%"/>

        <ImageView
            android:id="@+id/imageView_nav_home"
            android:onClick="onClickHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="8%"
            app:layout_marginLeftPercent="6%"
            android:tint="?attr/colorPrimaryContents"
            app:layout_widthPercent="17.5%"
            app:layout_heightPercent="60%"/>
        <ImageView
            android:id="@+id/imageView_nav_post"
            android:onClick="onClickPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView_nav_home"
            app:layout_marginLeftPercent="7%"
            app:layout_marginTopPercent="8%"
            android:tint="?attr/colorPrimaryContents"
            app:layout_widthPercent="17.5%"
            app:layout_heightPercent="60%"/>
        <ImageView
            android:id="@+id/imageView_nav_course"
            android:onClick="onClickCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView_nav_post"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="8%"
            android:tint="?attr/colorPrimaryContents"
            app:layout_widthPercent="17.5%"
            app:layout_heightPercent="60%"/>
        <ImageView
            android:id="@+id/imageView_nav_me"
            android:onClick="onClickMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView_nav_course"
            android:tint="?attr/colorPrimaryContents"
            app:layout_marginLeftPercent="6%"
            app:layout_marginTopPercent="8%"
            app:layout_widthPercent="17.5%"
            app:layout_heightPercent="60%"/>

        <TextView
            android:id="@+id/textView_nav_home"
            android:onClick="onClickHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_nav_home"
            android:text="Home"
            android:textColor="?attr/colorSecondaryContents"
            android:autoSizeTextType="uniform"
            android:textAlignment="center"
            app:layout_marginLeftPercent="6%"
            app:layout_widthPercent="17.5%"
            app:layout_heightPercent="30%"/>

        <TextView
            android:id="@+id/textView_nav_post"
            android:onClick="onClickPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_nav_post"
            android:layout_toRightOf="@+id/textView_nav_home"
            android:text="Post"
            android:textColor="?attr/colorSecondaryContents"
            android:autoSizeTextType="uniform"
            android:textAlignment="center"
            app:layout_marginLeftPercent="6%"
            app:layout_widthPercent="17.5%"
            app:layout_heightPercent="30%"/>

        <TextView
            android:id="@+id/textView_nav_course"
            android:onClick="onClickCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_nav_course"
            android:textColor="?attr/colorSecondaryContents"
            android:layout_toRightOf="@+id/textView_nav_post"
            android:autoSizeTextType="uniform"
            android:text="Course"
            android:textAlignment="center"
            app:layout_heightPercent="30%"
            app:layout_marginLeftPercent="6%"
            app:layout_widthPercent="17.5%" />

        <TextView
            android:id="@+id/textView_nav_me"
            android:onClick="onClickMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_nav_me"
            android:layout_toRightOf="@+id/textView_nav_course"
            android:textColor="?attr/colorSecondaryContents"
            android:autoSizeTextType="uniform"
            android:text="Me"
            android:textAlignment="center"
            app:layout_heightPercent="30%"
            app:layout_marginLeftPercent="6%"
            app:layout_widthPercent="17.5%" />

    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>